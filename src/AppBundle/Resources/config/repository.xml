<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="prooph.todo_repository.event_store_todo_list_factory"
                 class="ProophessorDo\TodoBundle\Repository\EventStoreTodoListFactory"/>

        <service id="prooph.todo_repository.event_store_todo_list"
                 class="ProophessorDo\TodoBundle\Repository\EventStoreTodoList">
            <factory service="prooph.todo_repository.event_store_user_collection_factory"
                     method="__invoke"/>
            <argument type="service" id="service_container"/>
        </service>

        <service id="prooph.todo_repository.event_store_user_collection_factory"
                 class="ProophessorDo\TodoBundle\Repository\EventStoreUserCollectionFactory"/>

        <service id="prooph.todo_repository.event_store_user_collection"
                 class="ProophessorDo\TodoBundle\Repository\EventStoreUserCollection">
            <factory service="prooph.todo_repository.event_store_user_collection_factory"
                     method="__invoke"/>
            <argument type="service" id="service_container"/>
        </service>

    </services>
</container>
