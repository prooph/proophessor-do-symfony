<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!--Todo-->
        <service id="prooph.todo_projection.todo_finder"
                 class="Prooph\ProophessorDo\TodoBundle\Projection\Todo\TodoFinder">
            <argument type="service" id="doctrine.dbal.default_connection"/>
        </service>

        <service id="prooph.todo_projection.todo_projector"
                 class="Prooph\ProophessorDo\TodoBundle\Projection\Todo\TodoProjector">
            <argument type="service" id="doctrine.dbal.default_connection"/>
        </service>

        <service id="prooph.todo_projection.todo_reminder_finder"
                 class="Prooph\ProophessorDo\TodoBundle\Projection\Todo\TodoReminderFinder">
            <argument type="service" id="doctrine.dbal.default_connection"/>
        </service>

        <service id="prooph.todo_projection.todo_reminder_projector"
                 class="Prooph\ProophessorDo\TodoBundle\Projection\Todo\TodoReminderProjector">
            <argument type="service" id="doctrine.dbal.default_connection"/>
        </service>

        <!--User-->
        <service id="prooph.todo_projection.user_finder"
                 class="Prooph\ProophessorDo\TodoBundle\Projection\User\UserFinder">
            <argument type="service" id="doctrine.dbal.default_connection"/>
        </service>

        <service id="prooph.todo_projection.user_projector"
                 class="Prooph\ProophessorDo\TodoBundle\Projection\User\UserProjector">
            <argument type="service" id="doctrine.dbal.default_connection"/>
            <argument type="service" id="prooph.todo_projection.user_finder"/>
        </service>

    </services>
</container>
